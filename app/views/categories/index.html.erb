<h1>Categories#index</h1>
<p>Find me in app/views/categories/index.html.erb</p>

<table>
<thead>
<tr>
<th>Category Name</th>
</thead>
<tbody>
<% @categories.each do |cat| %>
<tr>
<td><%= cat.name %></td>
<td><%= link_to 'Edit', edit_category_path(cat) %></td>
<td><%= link_to 'Delete', category_path(cat), method: :delete, data: {confirm: 'Are you sure?'} %></td>
<% end %>


